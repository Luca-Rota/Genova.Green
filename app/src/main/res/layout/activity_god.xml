<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#25d366"
            android:elevation="4dp"
            android:minHeight="80dp"
            style="@style/ToolBarStyle.Event" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <include layout="@layout/content_butto"
            android:visibility="invisible"
            android:id="@+id/content_butto"/>
    </LinearLayout>

        <include layout="@layout/content_impostazioni"
            android:visibility="invisible"/>
        <include layout="@layout/content_informazioni"
            android:visibility="invisible"/>
        <include layout="@layout/content_login"
            android:visibility="invisible"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/content_main_god"
            android:visibility="invisible">
        <include layout="@layout/content_main" />
        </LinearLayout>
        <include layout="@layout/content_map"
            android:visibility="invisible"/>
        <include layout="@layout/content_pericolosi"
            android:visibility="invisible"/>
        <include layout="@layout/content_pericolosi2"
            android:visibility="invisible"/>
        <include layout="@layout/content_registrazione"
            android:visibility="invisible"/>
        <include layout="@layout/content_spedizioni"
            android:visibility="invisible"/>
        <include layout="@layout/content_spedizioni2"
            android:visibility="invisible"/>
        <include layout="@layout/content_spedizioni3"
            android:visibility="invisible"/>
        <include layout="@layout/content_spedizioni4"
            android:visibility="invisible"/>
        <include layout="@layout/content_spedizioni5"
            android:visibility="invisible"/>

</LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="330dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu"/>

</androidx.drawerlayout.widget.DrawerLayout>